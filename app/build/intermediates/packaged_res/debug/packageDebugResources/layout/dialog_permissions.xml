<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Untuk menggunakan aplikasi ini, mohon berikan izin untuk:"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_overlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Layanan Overlay" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_dnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Layanan DND" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_pinning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Pin Layar" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="OK" />

</LinearLayout>
